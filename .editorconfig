root=true

[*]
charset=utf-8
end_of_line=lf
indent_style=space
indent_size=2
insert_final_newline=true
trim_trailing_whitespace=true
trim_trailing_comma=true
max_line_length = 180
quote_type = double

[Makefile]
indent_style=space
indent_size=2
insert_final_newline=false

[*.{js,json}]
indent_size=2

[*.md]
insert_final_newline=false
trim_trailing_whitespace=false
