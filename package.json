{
  "name": "chatter",
  "version": "1.0.0",
  "description": "Realtime chat application",
  "main": "index.js",
  "scripts": {
    "**sample**": "ts-node --files -r tsconfig-paths/register src/index.ts",
    "start": "ts-node-dev --files --respawn -r tsconfig-paths/register src/index.ts",
    "compile": "tsc --project tsconfig.json && tsc-alias -p tsconfig.json",
    "build": "npm run compile && node build/index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "postinstall": "npm run husky",
    "husky": "npx husky add .husky/commit-msg 'npx --no-install commitlint --edit \"$1\"'",
    "prehusky": "husky install",
    "lint": "eslint . --ext .ts,.tsx --fix"
  },
  "keywords": [
    "chat",
    "node",
    "real",
    "time",
    "app"
  ],
  "author": "Serkan KonakcÄ±",
  "license": "ISC",
  "dependencies": {
    "@types/express-session": "^1.17.4",
    "@types/morgan": "^1.9.3",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dayjs": "^1.11.0",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "express-fileupload": "^1.3.1",
    "express-session": "^1.17.3",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.2.8",
    "morgan": "^1.10.0",
    "rand-token": "^1.0.1",
    "socket.io": "^4.4.1",
    "uuid": "^8.3.2",
    "winston": "^3.6.0",
    "winston-daily-rotate-file": "^4.6.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@types/bcrypt": "^5.0.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/express": "^4.17.13",
    "@types/express-fileupload": "^1.2.2",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "^17.0.23",
    "@types/sass": "^1.43.1",
    "@types/stylelint": "^13.13.3",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "eslint": "^8.12.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.7",
    "prettier": "2.6.1",
    "prettier-eslint": "^13.0.0",
    "sass": "^1.49.9",
    "stylelint": "^14.6.1",
    "stylelint-config-recommended-scss": "^6.0.0",
    "ts-node-dev": "^1.1.8",
    "tsc-alias": "^1.6.5",
    "tsconfig-paths": "^3.14.1",
    "typescript": "^4.6.3"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,vue,ts,tsx,json}": [
      "eslint ./src/**/*.{ts,vue} --fix",
      "git add"
    ],
    "*.{css,vue}": "stylelint",
    "**/*": "prettier --write --ignore-unknown"
  },
  "browserslist": [
    "defaults",
    "not IE 11",
    "maintained node versions"
  ]
}
